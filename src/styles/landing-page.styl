.landing-page
    background-color white
    background url("http://api.thumbr.it/whitenoise-361x370.png?background=fafafaff&noise=595959&density=47&opacity=5")
    min-height 100vh
    padding-bottom 40px
    &__header
        height 60vh
        max-height 100%
        background-color black
        position relative
        margin-bottom 100px
        font-family 'Anton'
        &__bgimage
            max-height inherit
            height inherit
            &__image
                object-fit cover
                max-height inherit
                height inherit
                width 100vw
                filter brightness(70%)
            &__text-container
                position absolute
                top 0
                color white
                transform translate(-50%, 0)
                left 50%
                padding 0px 15px
                height 100%
                width 100%
                max-width 960px
                &__sub
                    top 50%
                    transform translateY(-50%)
                    position relative
                    &__title
                        font-size 5.5em
                        line-height 1em
                        text-transform uppercase
                        margin-bottom 20px
                        letter-spacing 0.02em
                    &__country-continent
                        font-size 1.5em
                        text-transform uppercase
                        letter-spacing .1em
    &__body
        max-width 960px
        width 100%
        margin 0 auto
        padding-bottom 200px
        font-family 'Montserrat'
        &__text
            font-size 1.2em
            line-height 1.5em
            margin-bottom 100px
        &__carrousel
            height 500px
            width 100%
            max-width 960px
            background-color transparent
            overflow hidden
            display flex
            align-items flex-end
            position relative
            justify-content center
            &__inner
                display flex
                position absolute
                height 100%
                width inherit
                flex-wrap wrap
                margin 0 auto
                justify-content center
                max-width 750px
                &__image-container
                    user-select none
                    background transparent
                    border none
                    outline none
                    max-width 250px
                    max-height 250px
                    height 100%
                    width 100%
                    padding 0
                    &:hover
                        background url(img/eye-icon.png) center center no-repeat
                    &__image
                        max-height inherit
                        max-width 250px
                        max-height 250px
                        height 100%
                        width 100%
                        object-fit cover
                        opacity 1
                        transition opacity .4s ease
                        display block
                        cursor pointer
                        &:hover
                            opacity .3
                            filter opacity(0.5)
                    &__text
                        font-family 'Montserrat'
                        display block
                        position absolute
                        display flex
                        width 100%
                        left 0
                        bottom 0
                        background-color black
                        z-index 1
                        color white
                        height 50px
                        text-align center
                        padding 5px 10px
                        box-sizing border-box
                        font-size 1.1em
                        opacity 0
                        padding-top 10px
                    &.-selected
                        height 500px
                        width 100%
                        max-width 750px
                        position absolute
                        z-index 1
                        min-height 100%
                        left 0
                        background-color black
                        .landing-page__body__carrousel__inner__image-container
                            &__image
                                height 100%
                                min-height 100%
                                min-width 100%
                                width 100%
                                transition opacity 1s
                                animation slide .6s
                                &:hover
                                    opacity 1
                                    filter opacity(1)
                            &__text
                                opacity .3
                                transition opacity 1s
                        &:hover
                            .landing-page__body__carrousel__inner__image-container
                                &__text
                                    opacity .85

                &__close-container
                    z-index 2
                    cursor pointer
                    height 30px
                    width 30px
                    position absolute
                    left 15px
                    top 15px
                    background transparent
                    border none
                    outline none
                    &__close
                        color white
                        height 30px
                        width 30px
                        position absolute
                        left 0
                        top 0
                &__counter
                    z-index 2
                    color white
                    font-size 20px
                    position absolute
                    right 15px
                    top 20px
                &__arrL-container
                    &__arrL
                        position absolute
                        left -50px
                        top 50%
                        transform translateY(-50%)
                        z-index 2
                        background transparent
                        border none
                        outline none
                        transform rotate(90deg)
                        transform-origin top
                        color black
                        cursor pointer
                        height 30px
                &__arrR-container
                    &__arrR
                        position absolute
                        right -75px
                        top 50%
                        transform translateY(-50%)
                        transform rotate(270deg)
                        transform-origin left
                        z-index 2
                        color black
                        cursor pointer
                        height 30px
    &__footer
        font-family 'Montserrat'
        width 100vw
        &__copyright
            margin 0 auto
            display flex
            justify-content center

@keyframes slide
  0%
   filter opacity(.4)
  100%
    filter opacity(1)